<h1>Kairos Signup</h1>

<div id="attendee-list">
	<% @people.each do |p| %>
	<div><%= "#{@num+=1}. #{p['profile']['first_name'].capitalize} #{p['profile']['last_name'].capitalize} (#{p['profile']['email']})" %><button type="button" class="button btn" data-toggle="modal" data-target="#exampleModal" style="vertical-align:middle"><span>Sign up with kairos</span></button></div>
	<% end %>
</div>


